{
  "name": "pinboard-pro",
  "version": "2.0.0",
  "private": true,
  "description": "Google Chrome extension for Pinboard.in (https://pinboard.in).",
  "author": "Richard KÃ¤ll <richard.kall@me.com>",
  "scripts": {
    "build": "rm -rf dist && webpack",
    "format": "prettier --write **/*.{html,js,json,md,ts,yml}",
    "lint": "eslint --ext js,ts ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn format --check && yarn lint"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{html,json,md,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "copy-webpack-plugin": "^5.1.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "zip-webpack-plugin": "^3.0.0"
  }
}
